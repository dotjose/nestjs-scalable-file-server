{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noLib": false,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "es6",
    "sourceMap": true,
    "allowJs": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@file-server/*": ["microservices/file-server/*"],
      "@application/*": ["microservices/file-server/application/*"],
      "@domain-abstractions/*": [
        "microservices/file-server/domain-abstractions/*"
      ],
      "@infrastructure/*": ["microservices/file-server/infrastructure/*"],
      "@model/*": ["microservices/file-server/model/*"],
      "@ports/*": ["microservices/file-server/ports/*"],
      "@presentation/*": ["microservices/file-server/presentation/*"],
      "@view-adapter": ["microservices/file-server/view-adapter/*"],
      "@views": ["microservices/file-server/view-adapter/imp/dto/views/*"],
      "@exceptions": ["shared-libraries/core/exceptions"],
      "@shared-libraries/*": ["shared-library/*"],
      "@shared-config/*": ["shared-config/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "dist", "build"]
}
